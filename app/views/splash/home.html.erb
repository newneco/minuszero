<div id="container">
  <header class="header text-center" role="banner">
    <%= link_to image_tag("minus-zero-festival-logo.png",alt: "Minus Zero Festival"),
            'http://minuszerofestival.com/', :id => "logo" %>
  </header>
  <div class="leader">
    <h2 class="text-center">STRATTON MOUNTAIN, VT</h2>
    <h2 class="text-center">APRIL 7th - 8th, 2017</h2>
  </div>
  <div class="splash">
    <div id="signpost">
      <div class="city">
        <div class="city-inner one">
          <h1>BASSNECTAR + GRIZ</h1>
